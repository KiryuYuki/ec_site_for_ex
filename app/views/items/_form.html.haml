= form_for(@item) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message
  .input-group
    .field
      = f.label :name, class: 'input-group-addon'
      = f.text_field :name, class: 'form-control'
    .field
      = f.label :price, class: 'input-group-addon'
      = f.number_field :price, class: 'form-control'
    .field
      = f.label :stock, class: 'input-group-addon'
      = f.number_field :stock, class: 'form-control'
    .field
      = f.label :image
      = f.file_field :image
    .actions
      = f.submit
