%p#notice= notice
.container
  .row
    - @items.each do |item|
      .col-md-4
        .panel.panel-default
          .panel-heading= image_tag item.image_url, class: 'img-thumbnail'
          .panel-body
            %ul
              %li= item.name
              %li
                ¥ #{item.price}
              %li
                %span Stock:
                = item.stock
            - if current_user
              %span= link_to 'Purchase', purchase_item_path(item), data: { confirm: 'Are you sure?' }, class: "btn btn-primary"
              %span= link_to 'Show', item, class: "btn btn-default"
            %div= link_to 'Edit', edit_item_path(item), class: "btn btn-default"
            %div= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"
